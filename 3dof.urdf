<?xml version="1.0"?>
<robot name="simple_3dof_arm">
  <material name="gray">
    <color rgba="0.6 0.6 0.6 1.0"/>
  </material>
  <material name="red">
    <color rgba="0.8 0.2 0.2 1.0"/>
  </material>
  <material name="green">
    <color rgba="0.2 0.8 0.2 1.0"/>
  </material>
  <material name="blue">
    <color rgba="0.2 0.2 0.8 1.0"/>
  </material>
  <material name="purple">
    <color rgba="0.6 0.2 0.8 1.0"/>
  </material>

  <!-- Ground link rigidly attached to simulator world -->
  <link name="ground_link">
    <visual>
      <origin xyz="0 0 0.5" rpy="0 0 0"/>
      <geometry>
        <box size="0.4 0.4 1.0"/>
      </geometry>
      <material name="gray"/>
    </visual>
    <collision>
      <origin xyz="0 0 0.5" rpy="0 0 0"/>
      <geometry>
        <box size="0.4 0.4 1.0"/>
      </geometry>
    </collision>
    <inertial>
      <origin xyz="0 0 0.5" rpy="0 0 0"/>
      <mass value="20.0"/>
      <inertia ixx="1.933333" ixy="0" ixz="0" iyy="1.933333" iyz="0" izz="0.533333"/>
    </inertial>
  </link>

  <!-- Link 1: cylindrical link, radius 0.1 m and thickness 0.05 m -->
  <link name="link1">
    <visual>
      <origin xyz="0 0 0.025" rpy="0 0 0"/>
      <geometry>
        <cylinder radius="0.1" length="0.05"/>
      </geometry>
      <material name="red"/>
    </visual>
    <collision>
      <origin xyz="0 0 0.025" rpy="0 0 0"/>
      <geometry>
        <cylinder radius="0.1" length="0.05"/>
      </geometry>
    </collision>
    <inertial>
      <origin xyz="0 0 0.025" rpy="0 0 0"/>
      <mass value="1.5"/>
      <inertia ixx="0.0040625" ixy="0" ixz="0" iyy="0.0040625" iyz="0" izz="0.0075"/>
    </inertial>
  </link>

  <!-- Link 2: length 0.8 m, square profile 0.05 m -->
  <link name="link2">
    <visual>
      <origin xyz="0.4 0 0" rpy="0 0 0"/>
      <geometry>
        <box size="0.8 0.05 0.05"/>
      </geometry>
      <material name="green"/>
    </visual>
    <collision>
      <origin xyz="0.4 0 0" rpy="0 0 0"/>
      <geometry>
        <box size="0.8 0.05 0.05"/>
      </geometry>
    </collision>
    <inertial>
      <origin xyz="0.4 0 0" rpy="0 0 0"/>
      <mass value="2.0"/>
      <inertia ixx="0.000833" ixy="0" ixz="0" iyy="0.107083" iyz="0" izz="0.107083"/>
    </inertial>
  </link>

  <!-- Link 3: length 0.8 m, square profile 0.05 m -->
  <link name="link3">
    <visual>
      <origin xyz="0.4 0 0" rpy="0 0 0"/>
      <geometry>
        <box size="0.8 0.05 0.05"/>
      </geometry>
      <material name="blue"/>
    </visual>
    <collision>
      <origin xyz="0.4 0 0" rpy="0 0 0"/>
      <geometry>
        <box size="0.8 0.05 0.05"/>
      </geometry>
    </collision>
    <inertial>
      <origin xyz="0.4 0 0" rpy="0 0 0"/>
      <mass value="2.0"/>
      <inertia ixx="0.000833" ixy="0" ixz="0" iyy="0.107083" iyz="0" izz="0.107083"/>
    </inertial>
  </link>

  <!-- Payload: 1 kg sphere of radius 0.05 m at the tip of link3 -->
  <link name="payload">
    <visual>
      <origin xyz="0 0 0" rpy="0 0 0"/>
      <geometry>
        <sphere radius="0.05"/>
      </geometry>
      <material name="purple"/>
    </visual>
    <collision>
      <origin xyz="0 0 0" rpy="0 0 0"/>
      <geometry>
        <sphere radius="0.05"/>
      </geometry>
    </collision>
    <inertial>
      <origin xyz="0 0 0" rpy="0 0 0"/>
      <mass value="1.0"/>
      <inertia ixx="0.001" ixy="0" ixz="0" iyy="0.001" iyz="0" izz="0.001"/>
    </inertial>
  </link>

  <!-- Motor transmission masses located at each actuated joint -->
  <link name="motor_transmission_0">
    <visual>
      <origin xyz="0 0 0" rpy="0 0 0"/>
      <geometry>
        <box size="0.1 0.06 0.06"/>
      </geometry>
      <material name="gray"/>
    </visual>
    <collision>
      <origin xyz="0 0 0" rpy="0 0 0"/>
      <geometry>
        <box size="0.1 0.06 0.06"/>
      </geometry>
    </collision>
    <inertial>
      <origin xyz="0 0 0" rpy="0 0 0"/>
      <mass value="0.9"/>
      <inertia ixx="0.00054" ixy="0" ixz="0" iyy="0.00102" iyz="0" izz="0.00102"/>
    </inertial>
  </link>

  <link name="motor_transmission_1">
    <visual>
      <origin xyz="0 0 0" rpy="0 0 0"/>
      <geometry>
        <box size="0.1 0.06 0.06"/>
      </geometry>
      <material name="gray"/>
    </visual>
    <collision>
      <origin xyz="0 0 0" rpy="0 0 0"/>
      <geometry>
        <box size="0.1 0.06 0.06"/>
      </geometry>
    </collision>
    <inertial>
      <origin xyz="0 0 0" rpy="0 0 0"/>
      <mass value="0.9"/>
      <inertia ixx="0.00054" ixy="0" ixz="0" iyy="0.00102" iyz="0" izz="0.00102"/>
    </inertial>
  </link>

  <link name="motor_transmission_2">
    <visual>
      <origin xyz="0 0 0" rpy="0 0 0"/>
      <geometry>
        <box size="0.1 0.06 0.06"/>
      </geometry>
      <material name="gray"/>
    </visual>
    <collision>
      <origin xyz="0 0 0" rpy="0 0 0"/>
      <geometry>
        <box size="0.1 0.06 0.06"/>
      </geometry>
    </collision>
    <inertial>
      <origin xyz="0 0 0" rpy="0 0 0"/>
      <mass value="0.9"/>
      <inertia ixx="0.00054" ixy="0" ixz="0" iyy="0.00102" iyz="0" izz="0.00102"/>
    </inertial>
  </link>


  <!-- joint0: ground_link -> link1, revolute about Z -->
  <joint name="joint0" type="revolute">
    <parent link="ground_link"/>
    <child link="link1"/>
    <origin xyz="0 0 1.0" rpy="0 0 0"/>
    <axis xyz="0 0 1"/>
    <dynamics damping="0.25" friction="0.05"/>
    <limit lower="-3.14159" upper="3.14159" effort="50" velocity="2.0"/>
  </joint>

  <!-- joint1: link1 end -> link2, revolute about X -->
  <joint name="joint1" type="revolute">
    <parent link="link1"/>
    <child link="link2"/>
    <origin xyz="0 0 0.05" rpy="0 0 0"/>
    <axis xyz="0 1 0"/>
    <dynamics damping="0.20" friction="0.04"/>
    <limit lower="-3.14159" upper="3.14159" effort="40" velocity="2.0"/>
  </joint>

  <!-- joint2: link2 end -> link3, revolute about X -->
  <joint name="joint2" type="revolute">
    <parent link="link2"/>
    <child link="link3"/>
    <origin xyz="0.8 0 0" rpy="0 0 0"/>
    <axis xyz="0 1 0"/>
    <dynamics damping="0.15" friction="0.03"/>
    <limit lower="-3.14159" upper="3.14159" effort="30" velocity="2.0"/>
  </joint>

  <!-- Fixed payload joint at the far end of link3 -->
  <joint name="link3_to_payload" type="fixed">
    <parent link="link3"/>
    <child link="payload"/>
    <origin xyz="0.8 0 0" rpy="0 0 0"/>
  </joint>

  <joint name="joint0_motor_transmission" type="fixed">
    <parent link="ground_link"/>
    <child link="motor_transmission_0"/>
    <origin xyz="0 0 1.0" rpy="0 0 0"/>
  </joint>

  <joint name="joint1_motor_transmission" type="fixed">
    <parent link="link1"/>
    <child link="motor_transmission_1"/>
    <origin xyz="0 0 0.05" rpy="0 0 0"/>
  </joint>

  <joint name="joint2_motor_transmission" type="fixed">
    <parent link="link2"/>
    <child link="motor_transmission_2"/>
    <origin xyz="0.8 0 0" rpy="0 0 0"/>
  </joint>
</robot>
